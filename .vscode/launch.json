  "version": "0.2.0",
  "configurations": [
    {
      "command": " pnpm dev",
      "name": "Run dev",
      "request": "launch",
      "type": "node-terminal",
      "nodeVersionHint": 18,
      "envFile": "${workspaceFolder}/apps/api/.env.development"
    },
    {
      "command": " pnpm test",
      "name": "Run test",
      "request": "launch",
      "type": "node-terminal",
      "nodeVersionHint": 18
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": " pnpm run dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "nvm use && pnpm run dev",
      "serverReadyAction": {
        "pattern": "- Lo'cal:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
